<div class="easyui-layout" fit="true" id="tb">
    <div data-options="region:'north'" style="padding: 1px; height:70px;">
        <!-------------------------------搜索框----------------------------------->
        <fieldset>
            <legend id="search_title">信息查询</legend>
            <form id="ffSearchrole" method="post">
                <div id="toolbar" style="margin-bottom:5px">
                    <label for="Keyword" id="search_key">搜:</label>
                    <input type="text" name="Keyword" id="Keyword" class="easyui-textbox" style="width: 220px; height: 25px; text-align: center;" placeholder="请输入" />
                    &nbsp;
                    <a id="btnSearchrole" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-search">查询</a>&nbsp;
                </div>
            </form>
        </fieldset>
    </div>
    <div data-options="region:'center'">
        <!-------------------------------详细信息展示表格----------------------------------->
        <table id="grid_role" title="角色"  data-options="iconCls:'icon-view'" fit="true"></table>
        <!--   弹出框       -->
        <div id="win_role" style="padding: 5px;background: #fafafa;">
            <div class="easyui-layout" fit="true">
                <form id="ffrole" method="post" ajax="true">
                    <table class="tb_searchbar">
                        <tbody>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_role_name">名称<span style="color:red;">*</span></label></td>
                                <td>
                                    <input type="text" id="role_Entity_Name" name="role_EntityName" value="  " style="width:310px" data-options="required:true" class="easyui-validatebox" maxlength="50" tabindex="1" />
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_role_remark">描述<span style="color:red;">*</span></label></td>
                                <td>
                                    <input type="text" id="role_Entity_Remark" name="role_EntityRemark" value="  " style="width:310px" data-options="required:true" class="easyui-validatebox" maxlength="50" tabindex="2" />
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_role_roletype">角色类型</label></td>
                                <td>
                                    <input type="text" id="role_Entity_RoleType" name="role_EntityRoleType" value="  " style="width:310px" maxlength="4" tabindex="3" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan='2'>
                                    <input type='hidden' id='role_Entity_ID' name='role_EntityID' value='' />
                                    <input type='hidden' id='role_Entity_IsDelete' name='role_EntityIsDelete' value='' />
                                    <input type='hidden' id='role_Entity_AddDate' name='role_EntityAddDate' value='' />
                                    <input type='hidden' id='role_Entity_UpdateDate' name='role_EntityUpdateDate' value='' />
                                <td>
                            </tr>
                        </tbody>
                    </table>

                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Plugins/UIShell.RbacManagementPlugin/ViewScript/role.cshtml.LanguageResource.js" type="text/javascript"></script>
    <script src="/Plugins/UIShell.RbacManagementPlugin/ViewScript/role.cshtml.js" type="text/javascript"></script>
}

