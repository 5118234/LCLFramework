 }  
 public class SaleRepository : EntityFrameworkRepository<Sale>, ISaleRepository  
 {  
      public SaleRepository(IRepositoryContext context)  
          : base(context)  
      {   
        
      }  
 }
 public class SaleRepository : MongoDBRepository<Sale>, ISaleRepository  
