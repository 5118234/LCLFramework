<div class="easyui-layout" fit="true" id="tb">
    <div data-options="region:'north'" style="padding: 1px; height:70px;">
        <!-------------------------------搜索框----------------------------------->
        <fieldset>
            <legend id="search_title">信息查询</legend>
            <form id="ffSearchhm_deviceinfo" method="post">
                <div id="toolbar" style="margin-bottom:5px">
                    <label for="Keyword" id="search_key">搜:</label>
                    <input type="text" name="Keyword" id="Keyword" class="easyui-textbox" style="width: 220px; height: 25px; text-align: center;" placeholder="请输入" />
                    &nbsp;
                    <a id="btnSearchhm_deviceinfo" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-search">查询</a>&nbsp;
                </div>
            </form>
        </fieldset>
    </div>
    <div data-options="region:'center'">
        <!-------------------------------详细信息展示表格----------------------------------->
        <table id="grid_hm_deviceinfo" title="客户设备管理" data-options="iconCls:'icon-view'" fit="true"></table>
        <!--   弹出框       -->
        <div id="win_hm_deviceinfo" style="padding: 5px;background: #fafafa;">
            <div class="easyui-layout" fit="true">
                <form id="ffhm_deviceinfo" method="post" ajax="true">
                    <table class="tb_searchbar">
                        <tbody>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_hm_deviceinfo_clientinfo_id">所属采暖季<span style="color:red;">*</span></label></td>
                                <td>
                                    <input id="hm_deviceinfo_Entity_ClientInfo_ID" class="easyui-combobox"
                                           data-options="valueField:'ID',textField:'Name',url:'/UIShell.HeatMeteringPlugin/HM_ChargeAnnual/AjaxGetBy'" />
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_hm_deviceinfo_devicetype">设备类型</label></td>
                                <td>
                                    <input type="text" id="hm_deviceinfo_Entity_DeviceType" name="hm_deviceinfo_EntityDeviceType" value="  " style="width:310px" maxlength="4" tabindex="1" />
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_hm_deviceinfo_isopen">表开启状态</label></td>
                                <td>
                                    <input type="radio" id="hm_deviceinfo_Entity_IsOpen1" name="hm_deviceinfo_Entity_IsOpen" value="true" checked tabindex="2" />是
                                    <input type="radio" id="hm_deviceinfo_Entity_IsOpen2" name="hm_deviceinfo_Entity_IsOpen" value="false" tabindex="2" />否
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_hm_deviceinfo_heatunittype">计量单位</label></td>
                                <td>
                                    <input type="text" id="hm_deviceinfo_Entity_HeatUnitType" name="hm_deviceinfo_EntityHeatUnitType" value="  " style="width:310px" maxlength="4" tabindex="3" />
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_hm_deviceinfo_devicemac">厂商编码<span style="color:red;">*</span></label></td>
                                <td>
                                    <input type="text" id="hm_deviceinfo_Entity_DeviceMac" name="hm_deviceinfo_EntityDeviceMac" value="  " style="width:310px" data-options="required:true" class="easyui-validatebox" maxlength="50" tabindex="4" />
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_hm_deviceinfo_devicenumber">设备号<span style="color:red;">*</span></label></td>
                                <td>
                                    <input type="text" id="hm_deviceinfo_Entity_DeviceNumber" name="hm_deviceinfo_EntityDeviceNumber" value="  " style="width:310px" data-options="required:true" class="easyui-validatebox" maxlength="50" tabindex="5" />
                                </td>
                            </tr>
                            <tr>
                                <td class="td_title"><label style="color: black" id="ff_lab_hm_deviceinfo_remark">备注<span style="color:red;">*</span></label></td>
                                <td>
                                    <input type="text" id="hm_deviceinfo_Entity_Remark" name="hm_deviceinfo_EntityRemark" value="  " style="width:310px" data-options="required:true" class="easyui-validatebox" maxlength="50" tabindex="6" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan='1'>
                                    <input type='hidden' id='hm_deviceinfo_Entity_ID' name='hm_deviceinfo_EntityID' value='' />
                                    <input type='hidden' id='hm_deviceinfo_Entity_IsDelete' name='hm_deviceinfo_EntityIsDelete' value='' />
                                    <input type='hidden' id='hm_deviceinfo_Entity_AddDate' name='hm_deviceinfo_EntityAddDate' value='' />
                                    <input type='hidden' id='hm_deviceinfo_Entity_UpdateDate' name='hm_deviceinfo_EntityUpdateDate' value='' />
                                <td>
                            </tr>
                        </tbody>
                    </table>

                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Plugins/UIShell.HeatMeteringPlugin/ViewScript/hm_deviceinfo.cshtml.LanguageResource.js" type="text/javascript"></script>
    <script src="/Plugins/UIShell.HeatMeteringPlugin/ViewScript/hm_deviceinfo.cshtml.js" type="text/javascript"></script>
}

