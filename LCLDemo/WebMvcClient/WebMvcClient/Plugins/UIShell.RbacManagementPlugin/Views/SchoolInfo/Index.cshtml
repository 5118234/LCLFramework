@using LCL.MvcExtensions; 
@{ 
    ViewBag.Title = "学校信息"; 
} 
<div class="page-title">
    <h2><i class="icon-desktop color"></i> 学校信息 <small>显示所有学校信息</small></h2>
    <hr />
</div>
<!-- Page title -->
<div class="awidget">
    <div class="awidget-head">
        <div class="row">
            <div class="col-md-10">
                <span>总数：@Model.TotalCount</span>
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-warning pull-right" onclick="javascript: location.href='@Url.Action("AddOrEdit",
    new { currentPageNum = Model.CurrentPageNum, pageSize = Model.PageSize })';">
                    新 增
                </button>
            </div> 
        </div>
    </div>
    <div class="awidget-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>操作</th>
                            <th>名称</th>
                            <th>办公电话</th>
                            <th>校长名称</th>
                            <th>校长手机</th>
                            <th>校庆日</th>
                            <th>土地证号</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var view in Model.PagedModels)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-xs btn-primary" href="../Department/Index?nuitId=@view.ID">部门</a>
                                        <a class="btn btn-xs btn-primary" href="../User_Teacher/Index?schoolId=@view.ID">教师</a>
                                        <a class="btn btn-xs btn-primary" href="../User_Student/Index?schoolId=@view.ID">学生</a>
                                        <button type="button" class="btn btn-xs btn-warning"
                                                onclick="javascript: location.href = '@Url.Action("AddOrEdit", new { ID = view.ID, currentPageNum = Model.CurrentPageNum, pageSize = Model.PageSize })';">
                                            <i class="icon-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-xs btn-danger"
                                                onclick="javacript: if (confirm('确认要删除这条数据吗？')) {  location.href = '@Url.Action("Delete", new { ID = view.ID, currentPageNum = Model.CurrentPageNum, pageSize = Model.PageSize })'; };">
                                            <i class="icon-remove"></i>
                                        </button>
                                    </td>
                                    <td>@view.Name</td>
                                    <td>@view.OfficePhone</td>
                                    <td>@view.HeadmasterName</td>
                                    <td>@view.HeadmasterPhone</td>
                                    <td>@view.SchoolYear.ToString("yyyy-MM-dd")</td>
                                    <td>@view.LandCardNo</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @Html.Partial("_PagedListBottom")
    </div>
</div>



