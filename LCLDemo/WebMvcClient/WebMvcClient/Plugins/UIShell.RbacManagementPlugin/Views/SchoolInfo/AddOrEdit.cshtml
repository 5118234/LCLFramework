@{
    ViewBag.Title = "编辑学校信息";
}
@using LCL.MvcExtensions;
@using UIShell.RbacPermissionService;
@model AddOrEditViewModel<SchoolInfoViewModel>
<!-- Page title -->
<div class="page-title">
    <h2>
        <i class="icon-desktop color"></i> 学校信息 <small>
            @{
                string actionTag = "";
                if (Model.Added) { actionTag = "新增一个学校信息"; } else { actionTag = "编辑一个学校信息"; }
            }@actionTag
        </small>
    </h2> <hr />
</div>
<!-- Page title -->
<div class="row">
    <!--col-md-6 start-->
    <div class="col-md-12">
        <!--box-info start-->
        <div class="col-md-12">
            <!--box-info start-->
            <div class="awidget">
                <div class="awidget-head">
                    <h3>用户</h3>
                </div>
                <div class="awidget-body">
                    <!--form-horizontal row-border start-->
                    @using (Html.BeginForm(Model.Added ? "Add" : "Edit", "SchoolInfo", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                    {
                        @Html.HiddenFor(c => c.CurrentPageNum)
                        @Html.HiddenFor(c => c.PageSize)
                        @Html.HiddenFor(c => c.Entity.ID)
                        <table class="table table-hover table-bordered">
                            <tr>
                                <td width="10%" class="tableleft">组织机构代码</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.HelperCode, new { @placeholder = "请输入组织机构代码" })
                                    @Html.ValidationMessageFor(c => c.Entity.HelperCode)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">名称</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.Name, new { @placeholder = "请输入名称" })
                                    @Html.ValidationMessageFor(c => c.Entity.Name)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">全称</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.NameFull, new { @placeholder = "请输入全称" })
                                    @Html.ValidationMessageFor(c => c.Entity.NameFull)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">外文名称</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.NameEN, new { @placeholder = "请输入外文名称" })
                                    @Html.ValidationMessageFor(c => c.Entity.NameEN)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">电子邮箱</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.Email, new { @placeholder = "请输入电子邮箱" })
                                    @Html.ValidationMessageFor(c => c.Entity.Email)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">办公电话</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.OfficePhone, new { @placeholder = "请输入办公电话" })
                                    @Html.ValidationMessageFor(c => c.Entity.OfficePhone)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">传真电话</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.FaxPhone, new { @placeholder = "请输入传真电话" })
                                    @Html.ValidationMessageFor(c => c.Entity.FaxPhone)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">地址</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.Address, new { @placeholder = "请输入地址" })
                                    @Html.ValidationMessageFor(c => c.Entity.Address)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">邮政编码</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.ZipCode, new { @placeholder = "请输入邮政编码" })
                                    @Html.ValidationMessageFor(c => c.Entity.ZipCode)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">单位网址</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.HomePage, new { @placeholder = "请输入单位网址" })
                                    @Html.ValidationMessageFor(c => c.Entity.HomePage)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">描述</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.Remark, new { @placeholder = "请输入描述" })
                                    @Html.ValidationMessageFor(c => c.Entity.Remark)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">单位类型</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.OrgType, new { @placeholder = "请输入单位类型" })
                                    @Html.ValidationMessageFor(c => c.Entity.OrgType)
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"><hr /></td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">校长名称</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.HeadmasterName, new { @placeholder = "请输入校长名称" })
                                    @Html.ValidationMessageFor(c => c.Entity.HeadmasterName)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">校长手机</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.HeadmasterPhone, new { @placeholder = "请输入校长手机" })
                                    @Html.ValidationMessageFor(c => c.Entity.HeadmasterPhone)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">校庆日</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.SchoolYear, new { @placeholder = "请输入校庆日" })
                                    @Html.ValidationMessageFor(c => c.Entity.SchoolYear)
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="tableleft">土地证号</td>
                                <td>
                                    @Html.TextBoxFor(c => c.Entity.LandCardNo, new { @placeholder = "请输入土地证号" })
                                    @Html.ValidationMessageFor(c => c.Entity.LandCardNo)
                                </td>
                            </tr>

                            <tr>
                                <td width="10%" class="tableleft">上一级</td>
                                <td>
                                    @Html.DropDownList("ddlSchoolInfo", ViewData["ddlSchoolInfo"] as IEnumerable<SelectListItem>)
                                </td>
                            </tr>
                            <tr>
                                <td class="tableleft"></td>
                                <td>
                                    <button type="submit" class="btn btn-primary">提交</button>
                                    <button type="button" class="btn btn-success" id="backid" onclick="javacript:history.go(-1);">返回列表</button>
                                </td>
                            </tr>
                        </table>
                    }
                </div>
            </div>

        </div>
    </div>
</div>



