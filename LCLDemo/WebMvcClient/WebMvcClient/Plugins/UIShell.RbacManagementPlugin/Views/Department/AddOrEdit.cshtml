@{ 
    ViewBag.Title = "编辑部门"; 
} 
 
@using LCL.MvcExtensions 
@using UIShell.RbacPermissionService 
@model AddOrEditViewModel<Department> 
 
<!-- Page title --> 
<div class="page-title"> 
    <h2><i class="icon-desktop color"></i> 部门 <small>  
          @{ 
            string actionTag=""; 
            if (Model.Added) { actionTag = "新增一个部门"; } else { actionTag = "编辑一个部门"; } 
            }@actionTag 
   </small></h2> <hr /> 
</div> 
<!-- Page title --> 
 
<div class="row"> 
    <!--col-md-6 start--> 
    <div class="col-md-12"> 
        <!--box-info start--> 
        <div class="col-md-12"> 
            <!--box-info start--> 
            <div class="awidget"> 
                <div class="awidget-head"> 
                    <h3>部门</h3> 
                </div> 
                <div class="awidget-body"> 
                    <!--form-horizontal row-border start--> 
                    @using (Html.BeginForm(Model.Added ? "Add" : "Edit", "Department", FormMethod.Post, new { @class = "form-horizontal", @role = "form" })) 
                    { 
                        @Html.HiddenFor(c => c.CurrentPageNum) 
                        @Html.HiddenFor(c => c.PageSize) 
                        @Html.HiddenFor(c => c.Entity.ID) 
 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Entity.HelperCode)</label> 
                            <div class="col-sm-10"> 
                                @Html.TextBoxFor(c => c.Entity.HelperCode, new { @class = "form-control", @placeholder = "请输入代码" }) 
                                @Html.ValidationMessageFor(c => c.Entity.HelperCode) 
                            </div> 
                        </div> 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Entity.Name)</label> 
                            <div class="col-sm-10"> 
                                @Html.TextBoxFor(c => c.Entity.Name, new { @class = "form-control", @placeholder = "请输入名称" }) 
                                @Html.ValidationMessageFor(c => c.Entity.Name) 
                            </div> 
                        </div> 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Entity.IsLast)</label> 
                            <div class="col-sm-10"> 
                                @Html.TextBoxFor(c => c.Entity.IsLast, new { @class = "form-control", @placeholder = "请输入是否最后一级" }) 
                                @Html.ValidationMessageFor(c => c.Entity.IsLast) 
                            </div> 
                        </div> 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Entity.Level)</label> 
                            <div class="col-sm-10"> 
                                @Html.TextBoxFor(c => c.Entity.Level, new { @class = "form-control", @placeholder = "请输入树形深度" }) 
                                @Html.ValidationMessageFor(c => c.Entity.Level) 
                            </div> 
                        </div> 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Entity.NodePath)</label> 
                            <div class="col-sm-10"> 
                                @Html.TextBoxFor(c => c.Entity.NodePath, new { @class = "form-control", @placeholder = "请输入树形路径" }) 
                                @Html.ValidationMessageFor(c => c.Entity.NodePath) 
                            </div> 
                        </div> 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Entity.OrderBy)</label> 
                            <div class="col-sm-10"> 
                                @Html.TextBoxFor(c => c.Entity.OrderBy, new { @class = "form-control", @placeholder = "请输入排序" }) 
                                @Html.ValidationMessageFor(c => c.Entity.OrderBy) 
                            </div> 
                        </div> 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Entity.ParentId)</label> 
                            <div class="col-sm-10"> 
                                @Html.TextBoxFor(c => c.Entity.ParentId, new { @class = "form-control", @placeholder = "请输入上一级" }) 
                                @Html.ValidationMessageFor(c => c.Entity.ParentId) 
                            </div> 
                        </div> 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label">上一级</label> 
                            <div class="col-sm-10"> 
                                 @Html.DropDownList("ddlDepartment", ViewData["ddlDepartment"] as IEnumerable<SelectListItem>) 
                            </div> 
                        </div> 
 
                        <div class="form-group"> 
                            <label class="col-sm-2 control-label"></label> 
                            <div class="col-sm-10"> 
                                <button type="submit" class="btn btn-primary">保存</button>&nbsp;&nbsp; 
                                <button type="button" class="btn btn-default" onclick="javascript: window.history.back();">返回</button> 
                            </div> 
                        </div> 
                         
                         
                    } 
                </div> 
            </div> 
 
        </div> 
    </div> 
</div> 
