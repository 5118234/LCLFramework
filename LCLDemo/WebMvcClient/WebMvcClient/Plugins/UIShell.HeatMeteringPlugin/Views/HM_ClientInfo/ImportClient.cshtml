        function ImportClient_FileUpload() {
            var filePath = $("#icFileUpload").filebox('getValue');
            if (filePath.length > 0) {
                $.post("ImportBizLogic?icFileUpload=" + filePath, function (resultData) {
                    $.messager.alert('警告', resultData.Message);
                }, 'json');
            } else {
                $.messager.alert('警告', '请选择文件');
            }
        }
    </script>
}
